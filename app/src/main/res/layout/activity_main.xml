<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <EditText
                android:id="@+id/numerator1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="@string/numerator"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/denominator1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="@string/denominator"
                android:inputType="number"
                android:singleLine="true" />

            <CheckBox
                android:id="@+id/negative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/negative" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/symbols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />

            <RadioButton
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

            <RadioButton
                android:id="@+id/times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ร" />

            <RadioButton
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รท" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <EditText
                android:id="@+id/numerator2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="@string/numerator"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/denominator2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="@string/denominator"
                android:inputType="number"
                android:singleLine="true" />

            <CheckBox
                android:id="@+id/negative2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/negative" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/makes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/makes" />

            <CheckBox
                android:id="@+id/reduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"
                android:text="@string/reduction" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/numerator3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="-0123456789"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/numerator"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/denominator3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="-0123456789"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/denominator"
                android:inputType="number"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/copy_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_n" />

            <Button
                android:id="@+id/copy_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_d" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3C3C3C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <EditText
                android:id="@+id/numerator4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="@string/numerator"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/denominator4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="@string/denominator"
                android:inputType="number"
                android:singleLine="true" />

            <CheckBox
                android:id="@+id/negative3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/negative" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/exponential"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="-0123456789"
                android:hint="@string/exponential"
                android:inputType="number"
                android:singleLine="true" />

            <Button
                android:id="@+id/makes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/makes" />

            <CheckBox
                android:id="@+id/reduction2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"
                android:text="@string/reduction" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <EditText
                android:id="@+id/numerator5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/numerator"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/denominator5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/denominator"
                android:inputType="number"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


